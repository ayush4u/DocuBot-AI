# DocuBot Enhanced RAG System - Environment Configuration
# =======================================================

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Supabase Configuration (Optional - will fallback to in-memory storage)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Hugging Face API (Optional - system works without it)
# Get free API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-key

# ChromaDB Configuration (Runs locally on port 8000)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Server Configuration
PORT=3001
NODE_ENV=development

# Free Component Configuration
# ============================

# Embedding Service
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2  # Local, multilingual, fast
EMBEDDING_DEVICE=cpu                      # CPU only (free)
EMBEDDING_QUANTIZED=true                  # Faster inference

# LLM Service  
PRIMARY_LLM_MODEL=microsoft/DialoGPT-large
CHAT_LLM_MODEL=facebook/blenderbot-400M-distill
SUMMARIZATION_MODEL=facebook/bart-large-cnn
QA_MODEL=deepset/roberta-base-squad2
FALLBACK_MODEL=microsoft/DialoGPT-medium

# Context Memory
MAX_CONTEXT_TOKENS=2000
MAX_CONVERSATIONS_PER_USER=50
CACHE_SIMILARITY_THRESHOLD=0.8
MAX_CACHE_ENTRIES_PER_USER=20

# Document Processing
CHUNK_SIZE=800
CHUNK_OVERLAP=200
PRESERVE_SENTENCES=true
MAX_FILE_SIZE_MB=10

# Vector Search
VECTOR_SEARCH_RESULTS=5
SIMILARITY_THRESHOLD=0.3
ENABLE_KEYWORD_FALLBACK=true

# Rate Limiting (for free APIs)
RATE_LIMIT_WINDOW_MS=300000  # 5 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Features (all free and open source)
ENABLE_LOCAL_EMBEDDINGS=true
ENABLE_CONTEXT_MEMORY=true
ENABLE_SEMANTIC_CACHE=true
ENABLE_SMART_CHUNKING=true
ENABLE_DOCUMENT_SUMMARIES=true
ENABLE_MULTI_MODEL_LLM=true

# Development Settings
LOG_LEVEL=info
DEBUG_MODE=false
ENABLE_SWAGGER=true
CORS_ORIGIN=*
